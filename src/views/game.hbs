    <h2 class="user-msg">Hello {{user}}</h2>
    <div class="info-bar">
        <div class="round">
            <h2 class='round-time'>30</h2>
        </div>
        <div class="next-round">
            <h2 class='round-time'></h2>
        </div>
        <div class="currentWord">
            <h2 class='currWord'> </h2>
        </div>
        <div class="score-container">
            <h2 class="score">0 points</h2>
        </div>
    
    </div>
